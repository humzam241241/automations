{
  "name": "example_local",
  "description": "Example profile using local .eml files (no Graph required)",
  "input_source": "local_eml",
  "email_selection": {
    "directory": "./input_emails",
    "pattern": "*.eml"
  },
  "schema": {
    "columns": [
      {"name": "Subject", "type": "text"},
      {"name": "From", "type": "text"},
      {"name": "Date", "type": "datetime"},
      {"name": "Urgent", "type": "text"},
      {"name": "Action Required", "type": "text"}
    ]
  },
  "rules": [
    {
      "column": "Urgent",
      "keywords": ["urgent", "asap", "immediate"],
      "value": "Yes",
      "unmatched_value": ""
    },
    {
      "column": "Action Required",
      "keywords": ["please review", "action required", "need response"],
      "value": "Yes",
      "unmatched_value": ""
    }
  ],
  "output": {
    "format": "excel",
    "destination": "local",
    "local_path": "./output",
    "filename_template": "local_report_{timestamp}.xlsx"
  }
}
